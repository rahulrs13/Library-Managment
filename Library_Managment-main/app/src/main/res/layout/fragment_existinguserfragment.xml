<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".existinguserfragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:id="@+id/booksmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/blue"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/backbutton"
                app:tint="@color/white"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="Existing User"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textSize="25sp"
                android:layout_weight="1"
                android:paddingLeft="40dp"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/booksmenu"
            android:orientation="vertical"
            android:background="@drawable/popular">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add book to Existing User"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="25dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">

            </TextView>
            <EditText
                android:id="@+id/tvuserrrid"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Existing User Id"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/tvbookkid"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Book Id"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/tvbookname"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Book Name"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/tvbookquantity"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Quantity"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/tvddate"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="Buying Date for Book"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/tvdueedate"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="Due Date"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <Button
                android:id="@+id/AddBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Book"
                android:layout_gravity="center"
                android:layout_marginTop="8dp">

            </Button>



        </LinearLayout>
    </RelativeLayout>

    </ScrollView>

</FrameLayout>
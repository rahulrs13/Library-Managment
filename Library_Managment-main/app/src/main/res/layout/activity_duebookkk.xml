<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.duebookkk">
    <LinearLayout
        android:id="@+id/topbarrrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/blackbackbtn"
            app:tint="@color/white">

        </ImageView>
        <TextView
            android:id="@+id/textt"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textColor="@color/white"></TextView>

    </LinearLayout>
    <TextView
        android:layout_below="@+id/topbarrrr"
        android:id="@+id/texttt"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Dues"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/texttt">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/duebookkrecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


</RelativeLayout>
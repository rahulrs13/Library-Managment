<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".addusersfragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue">
        <LinearLayout
            android:id="@+id/availablebooksmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/backbutton"
                app:tint="@color/white"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Add New User"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textSize="25sp"
                android:layout_weight="1"
                android:paddingLeft="40dp"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/availablebooksmenu"
            android:orientation="vertical"
            android:background="@drawable/popular"
           >

            <EditText
                android:id="@+id/tvusername"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Name"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/tvemailid"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Email Id"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/tvphoneno"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:hint="Phone Number"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/tvaddress"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Residence Address"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/tvbookid"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Book Id"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/tvbookname"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Book Name"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/tvquantity"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:inputType="number"
                android:hint="Quantity"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/tvdate"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="Date"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/tvduedate"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="Due Date"
                android:background="@drawable/searchavailablebooksbackground"
                android:padding="10dp"/>
            <Button
                android:id="@+id/tvsubmitbtn"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Add User" />



        </LinearLayout>


    </RelativeLayout>
    </ScrollView>

</FrameLayout>
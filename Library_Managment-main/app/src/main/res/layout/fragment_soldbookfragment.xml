<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".soldbookfragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">
            <LinearLayout
                android:id="@+id/availablebooksmenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/backbtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/backbutton"
                    app:tint="@color/white"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Delete User"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:paddingLeft="40dp"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/templatelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/availablebooksmenu"
                android:orientation="vertical"
                android:background="@drawable/popular">
                <EditText
                    android:id="@+id/tvuserid"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Existing User Id"
                    android:background="@drawable/searchavailablebooksbackground"
                    android:padding="10dp"/>
                <Button
                    android:id="@+id/DeleteBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete User"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#FF1515"
                    >

                </Button>
            </LinearLayout>



        </RelativeLayout>
    </ScrollView>

</FrameLayout>